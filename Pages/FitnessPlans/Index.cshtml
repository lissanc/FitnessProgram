@page
@model FitnessProgram.Pages.FitnessPlans.IndexModel

@{
    ViewData["Title"] = "Fitness Plans";
}

<h1>Fitness Plans</h1>

<p>
    <a asp-page="Create">Add a Fitness Plan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FitnessPlan[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessPlan[0].DurationWeeks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessPlan[0].Trainer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FitnessPlan[0].User.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FitnessPlan) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationWeeks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.TrainerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlanId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlanId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
