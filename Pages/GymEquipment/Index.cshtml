@page
@model FitnessProgram.Pages.GymEquipment.IndexModel

@{
    ViewData["Title"] = "Equipment";
}

<h1>Equipment</h1>

<p>
    <a asp-page="Create">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipment[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EquipId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EquipId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EquipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
