@page
@model FitnessProgram.Pages.Exercises.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].DifficultyLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Instructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise[0].Category.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Exercise) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficultyLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ExerciseId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ExerciseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
